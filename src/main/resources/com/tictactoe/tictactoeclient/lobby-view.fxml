      <Button fx:id="sendButton" disable="true" layoutX="540.0" layoutY="361.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="49.0" text="Send" />
      <TextField fx:id="chatTextField" disable="true" layoutX="308.0" layoutY="361.0" prefHeight="25.0" prefWidth="226.0" />
    </AnchorPane>
</AnchorPane>
