        <Button fx:id="joinGameButton" disable="true" layoutX="11.0" layoutY="330.0" mnemonicParsing="false" onAction="#onJoinGamePressed" text="Join Selected Game" />
        <Button fx:id="createGameButton" disable="true" layoutX="189.0" layoutY="361.0" mnemonicParsing="false" onAction="#onNewGameButtonPressed" text="Create New Game" />
